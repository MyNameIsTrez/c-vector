################################################################################

NAME := 1_ints

CC := gcc

CFLAGS := -Wall -Wextra -Werror
CFLAGS += -g3
CFLAGS += -fsanitize=address

OBJ_DIR := obj

################################################################################

SOURCES := \
	examples/$(NAME)/main.c

HEADERS := \
	examples/$(NAME)/main.h

################################################################################

SOURCES += \
	vector/vector.c

HEADERS += \
	vector/vector.h

################################################################################

OBJECTS := $(addprefix $(OBJ_DIR)/,$(SOURCES:.c=.o))

################################################################################

.PHONY: all
all: $(OBJECTS)
	$(CC) $(CFLAGS) $(OBJECTS)

$(OBJ_DIR)/%.o: %.c $(HEADERS)
	@mkdir -p $(@D)
	$(CC) $(CFLAGS) -c $< -o $@

################################################################################

.PHONY: clean
clean:
	rm -rf $(OBJ_DIR)

.PHONY: fclean
fclean: clean
	rm -f a.out

.PHONY: re
re: fclean all

################################################################################
